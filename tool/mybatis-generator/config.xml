<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="mysql-connector-java-5.1.26-bin.jar"/>

    <context id="stormDB" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/xrobot" userId="root" password="root">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.fairyland.xrobot.modular.xrobot.domain"
                            targetProject="../../src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="xrobot"
                         targetProject="../../src/main/resources/mybatis">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.fairyland.xrobot.modular.xrobot.dao.mapper" targetProject="../../src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>



        <table tableName="c_commentjoingroups" domainObjectName="CommentJoinGroups" />
        <table tableName="c_comments" domainObjectName="Comments" />
        <table tableName="c_creategroups" domainObjectName="CreateGroups" />
        <table tableName="c_pushjoingroups" domainObjectName="PushJoinGroups" />
        <table tableName="c_pushmessages" domainObjectName="PushMessages" />
        <table tableName="c_taskdevices" domainObjectName="TaskDevices" />
        <table tableName="c_taskdict" domainObjectName="TaskDict" />
        <table tableName="c_tasks" domainObjectName="Tasks" />





    </context>
</generatorConfiguration>